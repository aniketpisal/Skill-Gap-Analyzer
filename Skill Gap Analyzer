  <script>
    const skillsData = {
      datasci: ["Python Basics", "Data Analysis (Pandas/Numpy)", "Machine Learning", "Data Visualization", "SQL", "Statistics & Probability"],
      fullstack: ["HTML/CSS", "JavaScript", "React or Angular", "Java/Python Backend", "Database (SQL/MongoDB)", "Git/GitHub"],
      awsdevops: ["Linux Commands", "AWS Core Services", "CI/CD Tools (Jenkins, Git)", "Docker", "Kubernetes Basics", "Cloud Monitoring"]
    };

    function renderSkills() {
      const track = document.getElementById("track").value;
      const container = document.getElementById("skillsContainer");
      const form = document.getElementById("skillsForm");
      container.innerHTML = "";

      if (!track) {
        form.style.display = "none";
        return;
      }

      const skills = skillsData[track];
      skills.forEach(skill => {
        container.innerHTML += `
          <label class="skill-label">${skill} (Rate 0-10)</label>
          <input type="number" min="0" max="10" step="1" value="5" name="${skill}" />
        `;
      });
      form.style.display = "block";
    }

    function generateReport() {
      const track = document.getElementById("track").value;
      const inputs = document.querySelectorAll("#skillsForm input[type=number]");
      let total = 0;

      inputs.forEach(input => total += parseInt(input.value));
      const maxScore = inputs.length * 10;
      const percentage = Math.round((total / maxScore) * 100);

      let message = `<strong>ðŸ“Š Skill Readiness Score: ${percentage}%</strong><br><br>`;

      if (percentage >= 80) {
        message += `âœ… You're highly ready for this career track. Start building real-world projects now!`;
      } else if (percentage >= 60) {
        message += `ðŸŸ¡ You have the basics! Join our course to strengthen your skills and get job-ready.`;
      } else {
        message += `ðŸ”´ Looks like you're just starting. We recommend joining our beginner-friendly course in ${track === 'datasci' ? 'Data Science' : track === 'awsdevops' ? 'DevOps' : 'Full Stack Development'}.`;
      }

      message += `<br><br>ðŸ‘‰ <a href='/contact' style='color:#007bff;'>Talk to an expert now</a>`;
      const output = document.getElementById("output");
      output.innerHTML = message;
      output.style.display = "block";
    }
  </script>
